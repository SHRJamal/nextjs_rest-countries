{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "importHelpers": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "public/*": [
        "./public/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "./src"
  ],
  "exclude": [
    "node_modules",
    ".git"
  ]
}
